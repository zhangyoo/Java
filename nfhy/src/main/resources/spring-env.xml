<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="sysEnvironment" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<!--系统名称 -->
				<entry key="SystemTitle">
					<value>系统管理平台</value>
				</entry>
				<!--分页大小 -->
				<entry key="pageSize">
					<value>10</value>
				</entry>
				<!--提示标志：0:不提示，1：提示 -->
				<entry key="tipFlag">
					<value>1</value>
				</entry>
				<!--分页查询表单名称 -->
				<entry key="searchFormName">
					<value>searchFormForPage</value>
				</entry>
				<!--分页查询表单分页元素名称 -->
				<entry key="inputPageNum">
					<value>pagenum</value>
				</entry>
				<!--页面参数编码方式 -->
				<entry key="beforeTransEncode.get">
					<value>ISO-8859-1</value>
				</entry>
				<entry key="afterTransEncode.get">
					<value>UTF-8</value>
				</entry>
				<!--上传附件页面参数编码方式 -->
				<entry key="FileBeforeTransEncode">
					<value>ISO-8859-1</value>
				</entry>
				<entry key="FileAfterTransEncode">
					<value>UTF-8</value>
				</entry>
				<entry key="CATEGORY_ROOT_ID">
					<value>0</value>
				</entry>
				<entry key="DEPT_ROOT_ID">
					<value>0</value>
				</entry>
				<entry key="MENU_ROOT_ID">
					<value>0</value>
				</entry>
			</map>
		</constructor-arg>
	</bean>
	<bean id="whiteList" class="java.util.HashMap">
		<constructor-arg>
			<map>
				<!--系统白名单 -->
				<entry key="/login.jsp">
					<value>1</value>
				</entry>
				<entry key="/sysMng/login/login.do">
					<value>1</value>
				</entry>
			</map>
		</constructor-arg>
	</bean>
	<bean id="toolsUtils" class="com.nj.nfhy.util.basicUtils.ConstantUtils">
		<constructor-arg>
			<value>开始初始化系统环境对象</value>
		</constructor-arg>
		<!-- 将常量注入单例对象中 -->
		<property name="sysEnvironment">
			<ref bean="sysEnvironment" />
		</property>
		<property name="whiteList">
			<ref bean="whiteList" />
		</property>
		<!-- <property name="returnCode"> <ref bean="returnCode"/> </property> -->
	</bean>

</beans>